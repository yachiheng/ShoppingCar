@{
    ViewBag.Title = "會員登入";
}

<form action="@Url.Action("Login")" method="post">
   <div class="container" style="margin-top:20px;">
      
           <div class="card">
               <div class="card-header"><h3>會員登入</h3></div>
               <div class="card-body">
                   <div class="input-group">
                       <span class="input-group-addon">
                           <span class="glyphicon glyphicon-user"></span>
                       </span>
                       <input type="text" id="fUserId" name="fUserId" class="form-control" placeholder="請輸入帳號">
                   </div>

                   <div class="input-group">
                       <span class="input-group-addon">
                           <span class="glyphicon glyphicon-lock"></span>
                       </span>
                       <input type="password" id="fPwd" name="fPwd" class="form-control" placeholder="請輸入密碼">

                   </div>

                   <br />
                   <div class="form-group">
                       <input type="submit" value="登入" class="btn btn-primary" />
                       @ViewBag.Message
                   </div>
               </div>
           </div>
       </div>
   
    
</form>
